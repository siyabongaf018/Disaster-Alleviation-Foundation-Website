@{
    ViewData["Title"] = "Donations";
}
<div id="bg"></div>
<div class="b">
    <center>
        <h3 class="">Donations</h3>
        <hr />
        <br />
        <h3>💰Monetary Donation</h3>
        <form asp-action="MonetaryDonationValidation" method="post" class="fm">


            <div class="form-outline mb-4">
                💵<label class="form-label">Amount</label>

                <input type="number" value="1" min="0.00" max="10000.00" step="1.00" name="Amount" class="form-control" required="" autofocus />
            </div>
            <div class="form-outline mb-4">
                📆<label class="form-label">Donation date</label>
                <input type="date" name="DonaionDate" class="form-control" required="" autofocus />
            </div>

            <div class="form-check">
                <label class="form-check-label"> Donate Anonymously</label><br>
                <input type="checkbox" id="vehicle1" name="Anoinymous" value="1" style="height:30px;">
            </div>



            <button class="btnL" type="submit">Submit</button>

        </form>
    </center>



</div>