@using DisasterAlleviationFoundation.Models;
@model IEnumerable<AllocateGoods>
@{
    ViewData["Title"] = "View Allocated Goods Data";


}

<div id="bg"></div>
<div class="b">

    <h2 style="color:orange">View Active Disaster With Allocation data</h2> <br />
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ActiveDisasters">|Active Disasters</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Statitics">|<span style="color:orange">Allocated Goods</span> </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <h3>@ViewData["AvailableAmount"]</h3>

    <h3>@ViewData["TotalMonetaryDonation"]</h3>
    <h3>@ViewData["TotalNumberOfGoodsDonation"]</h3>

    <hr />
    <center>

        <h2>Allocated Goods Donation</h2>
        @{int i = 1;}
        <table border="0" cellspacing="1" cellpadding="2" class="table table-hover table-striped" style="color:white">
            <tr style="color:orange">
                <th scope="col">#</th>
                <th scope="col">DisasterID</th>
                <th scope="col">Description Of Disaster</th>
                <th scope="col">Location</th>
                <th scope="col">Number Of Items</th>
                <th scope="col">Description Of Items</th>
                <th scope="col">AllocationDate</th>



            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(i++)</td>
                    <td>@item.DisasterID</td>
                    <td>@item.DescriptionOfDisaster</td>
                    <td>@item.Location</td>
                    <td>@item.NumberOfItems</td>
                    <td>@item.DescriptionOfItem</td>
                    <td>@item.AllocationDate</td>

                </tr>
            }
        </table>
    </center>


</div>